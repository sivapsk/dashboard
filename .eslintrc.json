{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "react-app"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "no-dupe-keys": 2,
    "no-dupe-args": 2,
    "eol-last": 2,
    "no-debugger": "warn",
    "max-len": [
      "error",
      {
        "code": 180
      }
    ],
    "import/newline-after-import": [
      "error",
      {
        "count": 1
      }
    ],
    "space-before-function-paren": [
      0,
      "always"
    ],
    "no-trailing-spaces": "error",
    "space-in-parens": [
      0,
      "always"
    ],
    "arrow-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ],
    "no-use-before-define": [
      2,
      {
        "functions": false
      }
    ],
    "react/jsx-indent": [
      0
    ],
    "prefer-const": 1,
    "react/prefer-es6-class": 0,
    "class-methods-use-this": [
      0
    ],
    "no-undef": [
      1
    ],
    "no-case-declarations": [
      1
    ],
    "no-return-assign": [
      1
    ],
    "no-param-reassign": [
      1
    ],
    "camelcase": [
      1
    ],
    "no-underscore-dangle": [
      0,
      "always"
    ],
    "no-var": [
      2
    ],
    "no-unused-vars": [
      1
    ],
    "no-duplicate-imports": 2,
    "prefer-destructuring": 0,
    "no-loop-func": 2,
    "for-direction": 2,
    "no-async-promise-executor": 0,
    "no-await-in-loop": 2,
    "no-compare-neg-zero": 2,
    "init-declarations": 0,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-restricted-globals": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef-init": 2,
    "no-undefined": 0,
    "no-restricted-exports": 2,
    "no-restricted-imports": 2,
    "object-shorthand ": 0,
    "operator-assignment": 0,
    "padding-line-between-statements": 2,
    "prefer-exponentiation-operator": 2,
    "prefer-object-spread": 2,
    "quote-props": 0,
    "quotes": 0,
    "semi": 1, //semi
    "no-alert": 1,
    // require the use of === and !==
    "eqeqeq": 1,
    "no-div-regex": 2,
    "block-scoped-var": 2,
    "dot-notation": [
      0,
      {
        "allowKeywords": true
      }
    ],
    // require default case in switch statements
    "default-case": 2,
    "no-console": 1
  }
}